@model Web.ViewModels.JurosViewModel

@{
    ViewBag.Title = "Cálculo de taxa";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                Valor inicial:
                @Html.TextBoxFor(f => f.ValorInicial)
            </div>
            <div class="form-group">
                Tempo:
                @Html.TextBoxFor(f => f.Tempo)
            </div>
            <div class="form-group">
                Valor final:
                @Html.DisplayTextFor(f => f.ValorFinal)
            </div>
            <button type="submit" class="btn btn-default">Calcular</button>
        }
    </div>
</div>